<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Jobs Here</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
</head>
<body>
  @using JobPosting.Models;

  <h1>Current Jobs</h1>

  @if (Model.Count == 0)
  {
    <p>There are no jobs currently posted.</p>
  }
  <ul>
    @foreach (Job job in Model)
    {
      <li>The job title is: @job.JobTitle.ToUpper() <br>
      The basic duties are: @job.JobDescription. The position is based out of @job.JobLocation, and the starting salary is: @job.JobSalary dollars per year.</li>
    }
  </ul>
  <a href='/job/new'>Post a Job Today!</a>
  <a href='/job'>View Job Postings.</a>
</body>
</html>